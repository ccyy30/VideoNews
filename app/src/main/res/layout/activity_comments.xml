<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <feicuiedu.com.videonews.ui.comments.TitleTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/font_18"
            android:singleLine="true"
            android:gravity="center"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"/>
    </android.support.v7.widget.Toolbar>

    <feicuiedu.com.videoplayer.part.SimpleVideoPlayer
        android:id="@+id/simpleVideoPlayer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_300"
        android:background="@color/black"/>

    <feicuiedu.com.videonews.ui.comments.CommentsListView
        android:id="@+id/commentsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>